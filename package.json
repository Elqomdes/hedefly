{
  "name": "hedefly-ogrenci-koclugu",
  "version": "1.0.0",
  "description": "Hedefly Öğrenci Koçluğu Sistemi - Eduly Eğitim Teknolojileri",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "set PORT=5001 && nodemon server/server.js",
    "client": "node scripts/start-client.js",
    "build": "cd client; npm run build",
    "start": "set PORT=5001 && node server/server.js",
    "install-all": "npm install; cd client; npm install",
    "setup-mongodb": "node scripts/setup-mongodb.js",
    "health-check": "curl http://localhost:5001/api/health"
  },
  "keywords": [
    "education",
    "coaching",
    "student",
    "teacher",
    "management"
  ],
  "author": "Eduly Eğitim Teknolojileri",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "express-rate-limit": "^7.4.1",
    "express-validator": "^7.2.0",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.8.4",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.10.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1"
  }
}
